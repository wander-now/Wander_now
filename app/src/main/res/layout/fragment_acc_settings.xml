<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccSettingsFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/noto_sans_kr"
        android:text="Nickname@gmail.com"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toTopOf="@id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:text="#닉네임_주니"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="계정 설정"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="packed">

        <Button
            android:id="@+id/button1"
            android:layout_width="336dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/shield"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_semibold"
            android:paddingStart="15dp"
            android:text="비밀번호 및 보안"
            android:textAlignment="textStart"
            android:textColor="#002805"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="336dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/person"
            android:drawablePadding="10sp"
            android:fontFamily="@font/inter_semibold"
            android:paddingStart="15dp"
            android:text="개인정보 관리"
            android:textAlignment="textStart"
            android:textColor="#002805"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="336dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/write"
            android:drawablePadding="10sp"
            android:fontFamily="@font/inter_semibold"
            android:paddingStart="15dp"
            android:text="나의 리뷰 관리"
            android:textAlignment="textStart"
            android:textColor="#002805"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_small"
        android:fontFamily="@font/inter_semibold"
        android:text="로그아웃"
        android:textColor="#FF1C1C"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="41dp"
        android:src="@drawable/gray_line"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>